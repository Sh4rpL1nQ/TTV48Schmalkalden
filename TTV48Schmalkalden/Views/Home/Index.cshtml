@model TTV48Schmalkalden.Models.NewsOverviewViewModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Tischtennis";
    ViewData["Description"] = "Tischtennis in Schmalkalden! Wir heißen Sie recht herzlich im Tischtennisverein TTV 48 Schmalkalden willkommen &#10084. Hier finden Sie Informationen rund um uns und unsere Ballsportart. Viel Spaß beim Stöbern!";
}

<!-- ============================================================= HEADER : END ============================================================= -->
<!-- ============================================================= MAIN ============================================================= -->

<main>
    <!-- ============================================================= SECTION – HOME ============================================================= -->
    <section class="light-bg">
        <div class="container inner-top inner-bottom-xs">
            <div class="inner-right-xs inner-bottom-xs">
                <h1 class="">Wir heißen Sie rechtherzlich auf unserer offiziellen Vereinswebsite willkommen</h1>
            </div><!-- /.col -->
            <div class="row">
                <div class="col-lg-4 inner-right-xs inner-bottom-xs">
                    <h3>TTV 48 Schmalkalden</h3>
                    <p>
                        Seien Sie gegrüßt, sehr geehrte Freunde des Tischtennissports. <i class="icon-sound"><br /></i>
                        Die vorherige Website wurde ein paar Monate auf Eis gelegt und ist deshalb nicht mehr auf dem allerneusten Stand.
                        Hier können Sie mehr über uns erfahren.
                    </p>
                    <a href="#about" data-anchor-offset="0" class="btn btn-large scroll-to">Über uns</a>
                </div><!-- /.col -->

                <div class="col-lg-4 inner-right-xs inner-bottom-xs">
                    <h3>Freude am Tischtennis</h3>
                    <p>
                        Sind Sie Fans der Ballsportart und suchen eine Möglichkeit aktiv spielen zu können?
                        Informieren Sie sich über unsere Trainingszeiten.
                    </p>
                    <a href="#training" data-anchor-offset="0" class="btn btn-large scroll-to">Training</a>
                </div><!-- /.col -->
                <div class="col-lg-4 inner-right-xs inner-bottom-xs">
                    <h3>Aktuelles</h3>
                    <div class="row thumbs gap-xs">
                        <div class="col-12 thumb">
                            <a asp-action="Detail" asp-controller="News" asp-route-id="@Model.Latest.NewsId">
                                <figure class="crop" style="min-height:240px;max-height:240px;">
                                    <figcaption class="text-overlay">
                                        <div class="info">
                                            <h4 style="hyphens: auto;">@Model.Latest.Title</h4>
                                        </div><!-- /.info -->
                                    </figcaption>
                                    @if (!string.IsNullOrEmpty(Model.Latest.ImageUrl))
                                    {
                                        <img src="@Model.Latest.ImageUrl" alt="Bild der Neuigkeit">
                                    }
                                    else
                                    {
                                        <img src="~/assets/images/240px.svg" alt="Platzhalter für Neuigkeiten ohne Bild">
                                    }
                                </figure>
                                <figcaption class="bordered no-top-border addon">
                                    <div class="info">
                                        <h4>@Model.Latest.Title</h4>
                                    </div><!-- /.info -->
                                </figcaption>
                            </a>
                        </div><!-- /.thumb -->
                        
                    </div><!-- /.row -->
                </div>
            </div><!-- /.row -->
        </div><!-- /.container -->
    </section>

    <!-- ============================================================= SECTION – HOME : END ============================================================= -->
    <!-- ============================================================= SECTION – TRAINING ============================================================= -->

    <section id="training">
        <div class="container inner-top">

            <div class="row">
                <div class="col-lg-8 col-md-9 mx-auto text-center">
                    <header>
                        <h1>Wann trainieren wir?</h1>
                        <p>
                            Trainiert wird zweimal die Woche. Dabei spielen die Kinder und Jugendlichen zeitversetzt zu den Erwachsenen,
                            da die steigende Anzahl an Nachwuchsspielern mehr Platz fordert.
                        </p>
                    </header>
                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row inner-top-sm">

                <div class="col-lg-3 inner-bottom-sm">
                    <h2>Kindertraining</h2>
                    <ul class="circled">
                        <li>Dienstag von 17:30 Uhr bis 19:30 Uhr</li>
                        <li>Donnerstag von 17:30 Uhr bis 18:30 Uhr</li>
                    </ul>
                    <p class="text-small"></p>
                </div><!-- /.col -->

                <div class="col-lg-3 inner-bottom-sm">
                    <h2>Erwachsenentraining</h2>
                    <ul class="circled">
                        <li>Dienstag von 19:30 Uhr bis zum Umfallen</li>
                        <li>Donnerstag von 18:30 Uhr bis zum Umfallen</li>
                    </ul>
                    <p class="text-small"></p>
                </div><!-- /.col -->

                <div class="col-lg-6 inner-left-xs">
                    <figure><img src="~/assets/images/art/location.png" alt="Trainingsort des Schmalkalder Vereins" title="Sporthalle am Walperloh"></figure>
                </div><!-- /.col -->

            </div><!-- /.row -->

        </div><!-- /.container -->
    </section>

    <!-- ============================================================= SECTION – TRAINING : END ============================================================= -->
    <!-- ============================================================= SECTION – NEWS ============================================================= -->

    <section id="about" class="light-bg">
        <div class="container inner-top inner-bottom">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1>Über uns</h1>
                    <p style="text-align:justify;">
                        Wir sind ein traditionsreicher und regional agierender Verein in der Hochschul- und Reformationsstadt Schmalkalden im Süden Thüringens.
                        Aktuell spielt unsere erste Mannschaft in der ersten Bezirksliga und unsere zweite Mannschaft in der dritten Bezirksliga.<br /><br />
                        Seit mehreren jahren pflegen wir eine sehr gute Nachwuchsarbeit.
                        So bestreiten zwei Schülermannschaften
                        an der Spitze der Schülerkreisliga und alle weiteren Kinder immer wieder neu den Trainingsbetrieb mit Freude uns Ehrgeiz. Einige unserer Schüler mischen sogar in der ersten Jugendbezirksliga mit. <br /><br />
                        Allgemein stellen unsere Senioren einen wichtigen Baustein des Vereins dar. Ihre sportliche Aktivität
                        bis ins sehr hohe Alter zeigt sich auch in offiziellen Seniorenmeisterschaften bis hin zur Bundesebene.<br /><br />
                        Wenn ihr Lust darauf habt, mehr zu erfahren, könnt ihr nun umfangreicher auf unserer Webseite
                        stöbern. Solltet ihr Interesse an sportlicher Vereinsaktivität im Tischtennisbereich haben, könnt ihr gern zum Schnuppertraining oder
                        als Zuschauer beim Punktspiel vorbeikommen. Wir sind natürlich sehr an Sportlern für unsere
                        Mannschaften (in allen Klassen!) interessiert.
                    </p>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div>
    </section>

    <section id="news" class="light-bg img-bg-softer" style="background-image: url(assets/images/art/pattern-background01.jpg);">
        <div class="container inner-top-md inner-bottom-md">
            <div class="row">
                <div class="col-md-12">
                    <div id="accordion" class="panel-group" style="background-color:transparent;">
                        <div class="panel panel-default" style="background-color:rgb(255,255,255);">
                            <div id="content" class="panel-collapse collapse show" data-parent="#accordion" style="background-color:transparent">
                                <div class="panel-heading text-center">
                                    <h6 class="panel-title text-center inner-xs" style="font-size:25px">
                                        Neuigkeiten
                                    </h6>
                                </div>
                                <div class="panel-body">
                                    <div id="owl-popular-posts" class="owl-carousel owl-item-gap-sm" style="background-color:transparent;">
                                        @foreach (var news in Model.News)
                                        {
                                            <div class="item">
                                                <a asp-controller="News" asp-action="Detail" asp-route-id="@news.NewsId">
                                                    <figure class="crop" style="min-height:140px;max-height:140px;">
                                                        <figcaption class="text-overlay">
                                                            <div class="info">
                                                                <h4 style="hyphens: auto;">@news.Title</h4>
                                                            </div><!-- /.info -->
                                                        </figcaption>
                                                        @if (!string.IsNullOrEmpty(news.ImageUrl))
                                                        {
                                                            <img src="@news.ImageUrl" alt="Bild der Neuigkeit">
                                                        }
                                                        else
                                                        {
                                                            <img src="~/assets/images/140px.svg" alt="Platzhalter für Neuigkeiten ohne Bild">
                                                        }
                                                    </figure>
                                                    <figcaption class="bordered no-top-border addon">
                                                        <div class="info">
                                                            <h4>@news.Title</h4>
                                                        </div><!-- /.info -->
                                                    </figcaption>
                                                </a>
                                            </div>
                                        }
                                    </div><!-- /.owl-carousel -->
                                </div><!-- /.panel-body -->
                            </div><!-- /.content -->

                        </div><!-- /.panel -->
                    </div><!-- /.accordion -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container -->
    </section>

    <!-- ============================================================= SECTION – NEWS : END ============================================================= -->
    <!-- ============================================================= SECTION – REASONS ============================================================= -->
    <!-- ============================================================= SECTION – REASONS : END ============================================================= -->
    <!-- ============================================================= SECTION – GET IN TOUCH ============================================================= -->
    <!-- ============================================================= SECTION – GET IN TOUCH : END ============================================================= -->
    <!-- ============================================================= MODALS ============================================================= -->
    <!-- ============================================================= MODAL PRODUCT01 ============================================================= -->
    <!-- ============================================================= MODAL PRODUCT01 : END ============================================================= -->
    <!-- ============================================================= MODAL CONTACT01 ============================================================= -->
    <!-- ============================================================= MODAL CONTACT01 : END ============================================================= -->
    <!-- ============================================================= MODALS : END ============================================================= -->
</main>