@model TTV48Schmalkalden.Models.NewsPostViewModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Blog";
}

<section id="blog-post" class="light-bg">
    <div class="container inner-top-sm inner-bottom classic-blog">
        <div class="row">
            <div class="col-lg-9 inner-right-sm">
                <div class="sidemeta">

                    <div class="post format-gallery">

                        <div class="date-wrapper">
                            <div class="date">
                                <span class="day">@Model.NewsViewModel.GetDay()</span>
                                <span class="month">@Model.NewsViewModel.GetMonth()</span>
                                <span class="month">@Model.NewsViewModel.GetYear()</span>
                            </div><!-- /.date -->
                        </div><!-- /.date-wrapper -->

                        <div class="post-content">
                            <p class="author"><a href="" title="Post author" data-rel="tooltip" data-placement="left">@Model.NewsViewModel.Author</a></p>

                            <h1 class="post-title">@Model.NewsViewModel.Title</h1>

                            <ul class="meta">
                                <li class="categories">
                                    @foreach (var cat in Model.NewsViewModel.Categories)
                                    {
                                        if (cat.Id != 10)
                                        {
                                            <a asp-controller="News" asp-action="Index" asp-route-category="@cat.Id">@cat.Name&#32;&#32;</a>
                                        }
                                    }
                                </li>
                                @if (Model.NewsViewModel.CommentCount == 1)
                                {
                                    <li class="comments"><a asp-controller="News" asp-action="Detail" asp-route-id="@Model.NewsViewModel.NewsId" asp-fragment="comments" class="scroll-to" data-anchor-offset="0">@Model.NewsViewModel.CommentCount Kommentar</a></li> }
                                else
                                {
                                    <li class="comments"><a asp-controller="News" asp-action="Detail" asp-route-id="@Model.NewsViewModel.NewsId" asp-fragment="comments" class="scroll-to" data-anchor-offset="0">@Model.NewsViewModel.CommentCount Kommentare</a></li>}

                            </ul><!-- /.meta -->

                            @Html.Raw(Model.NewsViewModel.Body)

                            <!--<figure>
            <img style="max-width:50%;display:block;margin:auto;" src="~/" alt="">
            <figcaption></figcaption>
        </figure>-->

                        </div><!-- /.post-content -->

                    </div><!-- /.post -->

                    <div id="comments">
                        <h2>@Model.NewsViewModel.CommentCount Kommentare</h2>
                        <ol class="commentlist">

                            @foreach (var comment in Model.Comments)
                            {
                                <li class="comment">
                                    <div class="avatar icon-overlay icn-link">
                                        <a href="#"><img src="~/assets/images/placeholder-100px.svg" alt="Platzhalter für Kommentare" title="Kommentarbild"></a>
                                    </div><!-- /.avatar -->

                                    <div class="commentbody">

                                        <div class="author">
                                            <h3><a>@comment.Author</a></h3>
                                            <div class="meta">
                                                <span class="date"><i class="icon-clock"></i> @comment.WrittenDefference()</span>
                                            </div><!-- /.meta -->
                                        </div><!-- /.author -->

                                        <div class="message">
                                            <p>@comment.Body</p>
                                        </div><!-- /.message -->
                                    </div><!-- /.commentbody -->
                                </li>
                            }
                        </ol><!-- /.commentlist -->
                    </div><!-- /#comments -->

                    <div class="comment-form-wrapper">
                        <h2>Hinterlasse einen Kommentar</h2>

                        <form id="commentform" class="forms" asp-action="AddComment" method="post">

                            <div class="row">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.CommentForm.Name, new { @class = "form-control", placeholder = "Name" })
                                </div><!-- /.col -->
                            </div><!-- /.row -->

                            <div class="row">
                                <div class="col-md-12">
                                    @Html.TextAreaFor(model => model.CommentForm.Message, new { @class = "form-control", placeholder = "Kommentar" })
                                </div><!-- /.col -->
                            </div><!-- /.row -->
                            @Html.HiddenFor(model => model.CommentForm.NewsId)
                            <button type="submit" class="btn btn-submit">Kommentar abschicken</button>

                        </form>

                        <div id="response"></div>

                    </div><!-- /.comment-form-wrapper -->

                </div><!-- /.sidemeta -->
            </div><!-- /.col -->

            <aside class="col-lg-3">
                <div class="sidebox widget">
                    <h4>Suche</h4>

                    <form id="search" class="navbar-form search" role="search">
                        <input type="search" class="form-control" placeholder="Type to search">
                        <button type="submit" class="btn btn-submit icon-right-open"></button>
                    </form>
                </div><!-- /.widget -->

                <div class="sidebox widget">
                    <h4>Kategorien</h4>

                    <ul class="circled">
                        @foreach (var entry in Model.Categories)
                        {
                            <li><a asp-controller="News" asp-action="Index" asp-route-category="@entry.Category.Id">@entry.Category.Name (@entry.Count)</a></li>
                        }

                    </ul><!-- /.circled -->
                </div><!-- /.widget -->

                <div class="sidebox widget">
                    <h4>Willkommen</h4>
                    <p>Hier sehen Sie eine Ansammlung an Neuigkeiten sortiert von der Neusten zur Ältesten.</p>
                    <p>Diese werden von freiwilligen Mitgliedern verfasst und gegebenenfalls mit Bildern ausgestellt.</p>
                    <p>Als Nutzer dieser Sektion ist es Ihnen möglich, Kommentare zu verfassen um Feedback zu geben.</p>
                </div><!-- /.widget -->
            </aside>
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>

